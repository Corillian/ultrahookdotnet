<Window x:Class="UltraHookProxy.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UltraHookProxy"
        mc:Ignorable="d"
        Title="Connection" Height="200" Width="300">
    
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Subdomain"/>
            <TextBox Name="m_txtSubdomain"/>
            <TextBlock Text="Destination" Margin="0,5,0,0"/>
            <TextBox Name="m_txtDestination"/>
            <TextBlock Text="Key" Margin="0,5,0,0"/>
            <TextBox Name="m_txtKey"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Click="OK_Click"/>
                <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
